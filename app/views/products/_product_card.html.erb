<div class="column is-one-third">
  <div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        <% if product.image.present? %>
          <%= link_to image_tag(product.image), product %>
        <% else %>
          <%= link_to(image_tag("/images/no_image.png", alt: "No image for this product."), product) %>
        <% end %>
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-6"><%= link_to product.name, product %></p>
        </div>
      </div>
    </div>
      <footer class="card-footer">
        <% if @cart.include?(product) %>
        <%= link_to 'Remove from cart', remove_from_cart_path(product.id), class: 'card-footer-item', method: :delete %>
        <% else %>
        <%= link_to 'Add to cart', add_to_cart_path(product.id), class: 'card-footer-item', method: :post %>
        <% end %>
        <p class="card-footer-item"><%= number_to_currency(product.price) %></p>
      </footer>
  </div>
</div>